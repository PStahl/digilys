= semantic_form_for instruction, html: { class: "form-horizontal" } do |f|

  = hidden_field_tag :return_to, params[:return_to]

  = f.inputs do
    = f.input :title, required: true, input_html: { required: true, autofocus: true, class: "input-xxlarge" }
    = f.input :body,
      input_html: { rows: 10, class: "input-xxlarge" },
      hint: t(:".body_hint")

    = f.hidden_field :for_page

  = f.actions do
    = f.action :submit, label: t(:".save_action"), button_html: { class: "btn btn-primary"}
    %a.btn{href:params[:return_to] || root_path()}= t(:".cancel_action")
