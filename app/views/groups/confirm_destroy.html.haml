%h1= @group.name

= render partial: "navigation", locals: { group: @group, active: :destroy }

= semantic_form_for @group, method: :delete do |f|

  .alert.alert-block.alert-error
    %p= t(:".confirmation")

  = f.actions do
    = f.action :submit, label: t(:".destroy_action"), button_html: { class: "btn btn-danger"}
    %a.btn{href:group_path(f.object)}= t(:".cancel_action")
