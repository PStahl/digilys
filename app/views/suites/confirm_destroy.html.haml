%h1= @suite.name

= render partial: "navigation", locals: { suite: @suite, active: :destroy }

= semantic_form_for @suite, method: :delete do |f|

  .alert.alert-block.alert-error
    %p= t(:".confirmation")

  = f.actions do
    = f.action :submit, label: t(:".destroy_action"), button_html: { class: "btn btn-danger"}
    %a.btn{href:suite_path(f.object)}= t(:".cancel_action")
