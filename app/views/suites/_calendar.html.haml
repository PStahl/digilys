%table.table.table-bordered.table-hover.table-striped.suite-calendar-table
  %tbody
    - calendar_entries(suite).each do |entity|
      %tr
        %td.date= link_to(entity.date, entity)
        %td.name= link_to(entity.name, entity)
        %td.actions
          - case entity
          - when Evaluation
            .btn-group
              %a.btn.btn-mini.btn-primary{href: report_evaluation_path(entity)}= t(:".report_action")
            = evaluation_progress_bar(entity)
          - when Meeting
