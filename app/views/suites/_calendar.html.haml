%table.table.table-bordered.table-hover.table-striped.suite-calendar-table
  %tbody
    - suite.evaluations.each do |evaluation|
      %tr
        %td.date= evaluation.date
        %td.name= evaluation.name
        %td.actions
          .btn-group
            %a.btn.btn-mini.btn-primary{href: report_evaluation_path(evaluation)}=         t(:".report_action")
          .btn-group
            %a.btn.btn-mini{href: evaluation_path(evaluation)}=                            t(:".show_action")
            %a.btn.btn-mini{href: edit_evaluation_path(evaluation)}=                       t(:".edit_action")
            %a.btn.btn-mini.btn-danger{href: confirm_destroy_evaluation_path(evaluation)}= t(:".destroy_action")
