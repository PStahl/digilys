%h1= @suite.name

= render partial: "navigation", locals: { suite: @suite, active: :show }

.row-fluid
  .span9
    %h3= Participant.model_name.human(:count => 2)
    .btn-group
      %a.btn.btn-small{href: new_suite_participant_path(@suite)}= t(:".participant.add")
    = render partial: "participants/list", object: @suite.participants, as: :participants

    %h3= Evaluation.model_name.human(:count => 2)
    .btn-group
      %a.btn.btn-small{href: new_suite_evaluation_path(@suite)}= t(:".evaluation.add")
    = render partial: "evaluations/list", object: @suite.evaluations, as: :evaluations, locals: { hide_suite: true }

  .span3.sidebar
    .well
      %ul.nav.nav-list
        %li.nav-header= t(:".statistics")
        %li
          %a{href:visualize_suite_path(@suite)}= t(:".color_chart")
