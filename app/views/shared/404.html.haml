.alert.alert-block.alert-error
  %h1= t(:".title")
  = t(:".body_html")
  %p
    - if request.referer
      %a.btn.primary{href: request.referer}= t(:".back_action")
    - if controller.respond_to?(:index)
      %a.btn.primary{href: url_for(action: "index")}= t(:".continue_action")
    %a.btn.primary{href: root_url()}= t(:".start_over_action")
