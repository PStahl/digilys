- unless activities.blank?
  %ul.unstyled.activity-list
    - activities.each do |activity|
      %li{class: activity.overdue? ? "overdue" : ""}
        = link_to activity do
          %span.name= activity.name
          - if activity.date
            %small.date= l(activity.date)
          %span.label= activity.type_text
